<div id="login-modal" class="modal " tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="loginmodal-container">
      <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true"><i class="far fa-times-circle"></i></span>
				</button>
				<h3 class="modal-title">Sign In</h3>
      </div>
      <div class="modal-body text-center">
			
			<a href="/users/auth/facebook"><input type="image" src="assets/images/fbkbtn.png" alt="Facebook Login" class="btn-margin"/></a>
			<a href="/users/auth/google"><input type="image" src="assets/images/gglbtn.png" alt="Google Login" class="btn-margin"/></a>
			<a href="/users/auth/linkedin"><input type="image" src="assets/images/lkdbtn.png" alt="LinkedIn Login" class="btn-margin"/></a>
			
			<form class="login">
		  		<div id="username-form" class="form-group">
					<input id="username-input" type="text" name="user" placeholder="Username">
					<small id="username-feedback" class=""></small>
				</div>

				<div id="password-form" class="form-group">
					<input id="password-input" type="password" name="pass" placeholder="Password">
					<small id="password-feedback" class=""></small>
				</div>

				<input type="submit" name="login" class="login loginmodal-submit" value="Login">
		  </form>
      </div>
      <div class="modal-footer">
		  <div class="login-help">
				<a href="/users/signup">Register</a> | <a href="#">Forgot Password</a>
		  </div>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> --}}
      </div>
    </div>
  </div>
</div>

















